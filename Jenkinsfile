pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Compilation du code...'
                sh 'ls -la'  # Exemple de commande shell
            }
        }
        stage('Test') {
            steps {
                echo 'Exécution des tests...'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Déploiement en cours...'
            }
        }
    }
}
